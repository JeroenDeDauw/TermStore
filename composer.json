{
	"name": "queryr/term-store",
	"type": "library",
	"description": "Persistence of Wikibase terms with lookups of those terms and by those terms",
	"keywords": [
		"Wikibase",
		"DataModel",
		"Terms",
		"Fingerprint",
		"Lookup"
	],
	"homepage": "https://github.com/JeroenDeDauw/TermStore",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=5.5.0",

		"wikibase/data-model": "~4.0|~3.0|~2.5",
		"doctrine/dbal": "~2.4"
	},
	"require-dev": {
		"ext-sqlite3": "*",
		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.2.0",
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3"
	},
	"autoload": {
		"psr-4": {
			"Queryr\\TermStore\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
