{
	"name": "queryr/term-store",
	"type": "library",
	"description": "Persistence of Wikibase terms with lookups of those terms and by those terms",
	"keywords": [
		"Wikibase",
		"DataModel",
		"Terms",
		"Fingerprint",
		"Lookup"
	],
	"homepage": "https://github.com/JeroenDeDauw/TermStore",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=7.1",

		"wikibase/data-model": "~6.0",
		"doctrine/dbal": "~2.4"
	},
	"require-dev": {
		"ext-pdo_sqlite": "*",

		"phpunit/phpunit": "~6.5",
		"ockcyp/covers-validator": "~0.6.1",
		"squizlabs/php_codesniffer": "~3.2",
		"phpmd/phpmd": "~2.6"
	},
	"autoload": {
		"psr-4": {
			"Queryr\\TermStore\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.3.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"@phpcs",
			"@phpmd"
		],
		"ci": [
			"@test",
			"@cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
